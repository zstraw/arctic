<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>arctic-flink</artifactId>
        <groupId>com.netease.arctic</groupId>
        <version>0.5.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <!--  a shaded module. For supply a clean jar with shaded dependencies -->
    <artifactId>arctic-flink-runtime-1.12</artifactId>
    <name>Arctic Project Flink 1.12 Runtime</name>
    <url>https://arctic.netease.com</url>

    <properties>
        <flink.version>1.12.7</flink.version>
        <pulsar.version>2.10.0</pulsar.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.netease.arctic</groupId>
            <artifactId>arctic-flink-1.12</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.flink</groupId>
            <artifactId>flink-connector-kafka_${scala.binary.version}</artifactId>
            <version>${flink.version}</version>
        </dependency>
        <!--    conflict with iceberg-flink    -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>2.12.4</version>
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-log4j12</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>org.mortbay.jetty</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>com.sun.jersey</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>com.sun.jersey.contribs</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pentaho-aggdesigner-algorithm</artifactId>
                    <groupId>org.pentaho</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>${kafka.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!--     relocate content in properties       -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.pulsar</groupId>
                                    <artifactId>pulsar-client-all</artifactId>
                                    <version>${pulsar.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <includes>
                                        org/apache/pulsar/shade/org/asynchttpclient/config/ahc-default.properties
                                    </includes>
                                    <outputDirectory>${project.build.directory}/classes</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>shade-ahc-properties</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- shade the AsyncHttpClient ahc-default.properties files -->
                                <replace token="org.apache.pulsar"
                                         value="com.netease.arctic.shaded.org.apache.pulsar"
                                         file="${project.build.directory}/classes/org/apache/pulsar/shade/org/asynchttpclient/config/ahc-default.properties"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--     relocate content in properties       -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <createSourcesJar>true</createSourcesJar>
                            <artifactSet>
                                <includes>
                                    <include>org.apache.iceberg:*</include>
                                    <include>com.netease.arctic:*</include>
                                    <include>org.apache.parquet:*</include>
                                    <include>org.apache.commons:*</include>
                                    <include>commons-lang:*</include>
                                    <include>com.fasterxml.jackson.core:*</include>
                                    <include>org.apache.thrift:*</include>
                                    <include>com.github.ben-manes.caffeine:*</include>
                                    <include>org.apache.avro:*</include>
                                    <include>org.apache.orc:*</include>
                                    <include>commons-collections:*</include>
                                    <include>cglib:*</include>
                                    <include>com.google.guava:*</include>
                                    <include>asm:*</include>
                                    <include>org.apache.flink:flink-connector-kafka_${scala.binary.version}</include>
                                    <include>org.apache.kafka:*</include>
                                    <include>org.apache.pulsar:*</include>
                                    <!--           pulsar client depends on it                 -->
                                    <include>org.slf4j:jul-to-slf4j</include>
                                </includes>
                            </artifactSet>

                            <filters>
                                <filter>
                                    <artifact>org.apache.iceberg:*</artifact>
                                    <excludes>
                                        <exclude>LICENSE</exclude>
                                        <exclude>org/codehaus/**</exclude>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.parquet:*</artifact>
                                    <excludes>
                                        <exclude>p*</exclude>
                                        <exclude>s*</exclude>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.netease.arctic:arctic-hive</artifact>
                                    <excludes>
                                        <exclude>org/apache/hadoop/hive/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.commons:*</artifact>
                                    <excludes>
                                        <exclude>assets/**</exclude>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>commons-lang:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.fasterxml.jackson.core:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                        <exclude>*</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.thrift:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.github.ben-manes.caffeine:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.avro:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.orc:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>commons-collections:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>cglib:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.google.guava:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>asm:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.flink:flink-connector-kafka_${scala.binary.version}</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                        <exclude>org/apache/flink/table/descriptors/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.kafka:*</artifact>
                                    <excludes>
                                        <exclude>kafka/kafka-version.properties</exclude>
                                        <exclude>LICENSE</exclude>
                                        <!-- Does not contain anything relevant.
                                            Cites a binary dependency on jersey, but this is neither reflected in the
                                            dependency graph, nor are any jersey files bundled. -->
                                        <exclude>NOTICE</exclude>
                                        <exclude>common/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.pulsar:*</artifact>
                                    <excludes>
                                        <exclude>io/**</exclude>
                                        <exclude>de/**</exclude>
                                        <exclude>lib/**</exclude>
                                        <exclude>LICENSE</exclude>
                                        <exclude>*.xml</exclude>
                                        <exclude>*.html</exclude>
                                        <exclude>NOTICE</exclude>
                                        <exclude>*.dtd</exclude>
                                        <exclude>META-INF/*</exclude>
                                        <exclude>META-INF/v*/**</exclude>
                                        <exclude>META-INF/n*/**</exclude>
                                        <exclude>META-INF/m*/**</exclude>
                                        <exclude>META-INF/l*/**</exclude>
                                        <exclude>META-INF/services/reactor*</exclude>
                                        <exclude>META-INF/services/*.yaml</exclude>
                                    </excludes>
                                </filter>
                                <!--           pulsar client depends on it                 -->
                                <filter>
                                    <artifact>org.slf4j:jul-to-slf4j</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>

                            <relocations>
                                <relocation>
                                    <pattern>org.apache.iceberg.</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.iceberg.</shadedPattern>
                                </relocation>
                                <!--            parquet                    -->
                                <relocation>
                                    <pattern>org.apache.parquet.</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.parquet.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>shaded.parquet.</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.shaded.parquet.</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>parquet.</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.parquet.</shadedPattern>
                                </relocation>
                                <!--           org.apache.commons, commons-lang                    -->
                                <relocation>
                                    <pattern>org.apache.commons</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.commons</shadedPattern>
                                </relocation>
                                <!--             com.fasterxml.jackson.core                   -->
                                <relocation>
                                    <pattern>com.fasterxml</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.com.fasterxml</shadedPattern>
                                </relocation>
                                <!--              thrift                  -->
                                <relocation>
                                    <pattern>org.apache.thrift</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.thrift</shadedPattern>
                                </relocation>
                                <!--                caffeine                -->
                                <relocation>
                                    <pattern>com.github.benmanes.caffeine</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.com.github.benmanes.caffeine
                                    </shadedPattern>
                                </relocation>
                                <!--               avro                 -->
                                <relocation>
                                    <pattern>org.apache.avro</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.avro</shadedPattern>
                                </relocation>
                                <!--               orc                 -->
                                <relocation>
                                    <pattern>org.apache.orc</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.orc</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.threeten.extra</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.threeten.extra</shadedPattern>
                                </relocation>
                                <!--               cglib                 -->
                                <relocation>
                                    <pattern>net.sf.cglib</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.net.sf.cglib</shadedPattern>
                                </relocation>
                                <!--               guava                 -->
                                <relocation>
                                    <pattern>com.google</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.com.google</shadedPattern>
                                </relocation>
                                <!--             asm                   -->
                                <relocation>
                                    <pattern>org.objectweb.asm</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.objectweb.asm</shadedPattern>
                                </relocation>
                                <!--              flink-sql-connector-kafka                  -->
                                <relocation>
                                    <pattern>org.apache.flink.connector.kafka</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.flink.connector.kafka
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.flink.streaming.connectors.kafka</pattern>
                                    <shadedPattern>
                                        com.netease.arctic.shaded.org.apache.flink.streaming.connectors.kafka
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>
                                        org.apache.flink.streaming.util.serialization.JSONKeyValueDeserializationSchema
                                    </pattern>
                                    <shadedPattern>
                                        com.netease.arctic.shaded.org.apache.flink.streaming.util.serialization.JSONKeyValueDeserializationSchema
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.flink.streaming.util.serialization.KeyedDeserializationSchema
                                    </pattern>
                                    <shadedPattern>
                                        com.netease.arctic.shaded.org.apache.flink.streaming.util.serialization.KeyedDeserializationSchema
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.flink.streaming.util.serialization.KeyedSerializationSchema
                                    </pattern>
                                    <shadedPattern>
                                        com.netease.arctic.shaded.org.apache.flink.streaming.util.serialization.KeyedSerializationSchema
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>
                                        org.apache.flink.streaming.util.serialization.TypeInformationKeyValueSerializationSchema
                                    </pattern>
                                    <shadedPattern>
                                        com.netease.arctic.shaded.org.apache.flink.streaming.util.serialization.TypeInformationKeyValueSerializationSchema
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.kafka</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.kafka</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.facebook.fb303</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.com.facebook.fb303</shadedPattern>
                                </relocation>
                                <!--              pulsar related                -->
                                <relocation>
                                    <pattern>org.apache.flink.connector.pulsar</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.flink.connector.pulsar
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.pulsar</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.apache.pulsar</shadedPattern>
                                </relocation>
                                <!--           pulsar client depends on it                 -->
                                <relocation>
                                    <pattern>org.slf4j.bridge.SLF4JBridgeHandler</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.org.slf4j.bridge.SLF4JBridgeHandler
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.scurrilous</pattern>
                                    <shadedPattern>com.netease.arctic.shaded.com.scurrilous</shadedPattern>
                                </relocation>
                                <!--              pulsar related                 -->
                            </relocations>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-maven-central</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>${maven-jar-plugin-version}</version>
                        <executions>
                            <execution>
                                <id>empty-javadoc-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <classifier>javadoc</classifier>
                                    <classesDirectory>${basedir}/javadoc</classesDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>